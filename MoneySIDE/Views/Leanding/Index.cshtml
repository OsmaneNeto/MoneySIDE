@{
    ViewData["Title"] = "Landing Page";
}



<body>
    <style>
        /* General styles for the page */
        body {
            margin: 0; /* Remove margens padrão do corpo */
            padding: 0; /* Remove preenchimento padrão do corpo */
            overflow: hidden; /* Oculta barras de rolagem para a própria página */
            background-color: #000; /* Cor de fundo desejada */
            position: relative; /* Necessário para o posicionamento absoluto do iframe */
            height: 100vh; /* Garante que o corpo ocupe 100% da altura da viewport */
        }

        /* Estilos para o iframe */
        iframe {
            position: absolute; /* Permite que o iframe ocupe toda a tela */
            top: 0; /* Alinha o iframe ao topo */
            left: 0; /* Alinha o iframe à esquerda */
            width: 100%; /* 100% da largura da viewport */
            height: 100%; /* 100% da altura da viewport */
            border: none; /* Remove a borda do iframe */
        }

        /* Styles for the iframe (optional) */
        #myIframe {
            /* Style for the scrollbars */
            /* This applies only to the scrollbars within the iframe content.  If the iframe content requires scrollbars, you can customize them with the same CSS as before. */
            :: -webkit-scrollbar

        {
            width: 12px; /* Adjust the scrollbar thickness as needed */
        }

        ::-webkit-scrollbar-track {
            background: #000; /* Scrollbar background color */
        }

        ::-webkit-scrollbar-thumb {
            background: #000; /* Scrollbar thumb color */
        }

        /* Estilizando as barras de rolagem para navegadores WebKit */
        ::-webkit-scrollbar {
            width: 12px; /* Largura da barra de rolagem */
        }

        ::-webkit-scrollbar-track {
            background: #000; /* Cor do fundo da barra de rolagem */
        }

        ::-webkit-scrollbar-thumb {
            background: #000; /* Cor da barra de rolagem */
            border-radius: 6px; /* Bordas arredondadas */
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #000; /* Cor da barra de rolagem ao passar o mouse */
            }

        /* Estilizando as barras de rolagem para Firefox */
        scrollbar-width: thin; /* Largura da barra de rolagem */
        scrollbar-color: #000 #000; /* Cor da barra de rolagem e do fundo */
    </style>
    <iframe src="~/FRONT/index.html" style="width: 100vw; height: 100vh; border: 5px solid black; overflow: hidden;"></iframe>

    <script>
        // Get the iframe element
        const iframe = document.getElementById('myIframe');

        // Adjust the iframe's dimensions on window resize
        window.addEventListener('resize', () => {
            iframe.style.width = '100vw'; // 100% of viewport width
            iframe.style.height = '100vh'; // 100% of viewport height
        });

        // Initialize the iframe's size
        iframe.style.width = '100vw';
        iframe.style.height = '100vh';
    </script>
    </body>
