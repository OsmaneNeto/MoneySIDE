@{
    ViewBag.Title = "Analisar Extrato Bancário";
}

<h2>Analisar Extrato Bancário</h2>

<form asp-action="Upload" asp-controller="BankStatement" method="post" enctype="multipart/form-data">
    <div>
        <label for="file">Selecione o arquivo do extrato bancário:</label>
        <input type="file" name="file" id="file" />
    </div>
    <div>
        <button type="submit">Enviar</button>
    </div>
</form>

@if (ViewBag.Result != null)
{
    <h3>Resultado da Análise:</h3>
    <pre>@ViewBag.Result</pre>
}
