<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoneySIDE</title>

    <!-- Estilos -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoneySIDE.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

    <style>
        .navbar-brand {
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 40px; /* Ajuste o tamanho da imagem conforme necessário */
                margin-right: 8px; /* Espaço entre a imagem e o texto */
            }

        .navbar-nav .nav-link {
            color: white; /* Texto branco para itens do menu */
        }

            .navbar-nav .nav-link:hover {
                color: #ddd; /* Cor do texto ao passar o mouse, se necessário */
            }

        .navbar-light .navbar-nav .nav-link {
            color: white; /* Cor branca para links em um fundo claro */
        }

        .navbar-nav .nav-link {
            color: white !important; /* Adiciona !important para garantir que a cor branca seja aplicada */
        }

            .navbar-nav .nav-link:hover {
                color: #ddd; /* Cor do texto ao passar o mouse, se necessário */
            }

        .navbar-brand img {
            height: 40px; /* Para o primeiro logo */
            margin-right: 8px; /* Espaço entre a imagem e o texto */
        }

            .navbar-brand img:last-of-type {
                height: 30px; /* Ajuste o tamanho da segunda imagem */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/MoneySideLogoSemFundo.png" alt="MoneySIDE Logo" />
                    <img src="~/img/MONEYSIDE (1).png" alt="MoneySIDE titulo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Leanding" asp-action="Index">Leanding</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Scanner" asp-action="Index">Scanner</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Registros" asp-action="Index">Registros</a>
                        </li>
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MoneySIDE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
