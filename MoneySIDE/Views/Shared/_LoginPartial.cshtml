    @using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="d-flex">
    @if (SignInManager.IsSignedIn(User))
    {
        var userName = UserManager.GetUserName(User);
        var emailResumido = userName?.Split('@')[0]; // Pega tudo antes do '@'

        <a id="manage" class="nav-link text-login-logout" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @emailResumido!</a>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Leanding", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-login-logout border-0">Logout</button>
        </form>
    }
    else
    {
        <a class="nav-link text-login-cadastro" id="register" asp-area="Identity" asp-page="/Account/Register" style="margin-right: 10px;">Cadastro</a>
        <a class="nav-link text-login-cadastro" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</div>
