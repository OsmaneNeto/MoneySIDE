@model MoneySIDE.Models.Comprovante

@{
    ViewBag.Title = "Editar Comprovante";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        /* Estilo para a tela de carregamento */
        #loadingOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5); /* Semitransparente */
            display: none; /* Inicialmente escondido */
            align-items: center;
            justify-content: center;
            z-index: 9999; /* Acima de outros elementos */
        }
        .loadingSpinner {
            border: 8px solid #f3f3f3;
            border-radius: 50%;
            border-top: 8px solid #3498db;
            width: 60px;
            height: 60px;
            animation: spin 1s linear infinite;
        }
       
    </style>
</head>
<body>
    <!-- Tela de carregamento -->
    <div id="loadingOverlay">
        <div class="loadingSpinner"></div>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Valor" class="control-label"></label>
            <input asp-for="Valor" class="form-control" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NomeRemetente" class="control-label"></label>
            <input asp-for="NomeRemetente" class="form-control" />
            <span asp-validation-for="NomeRemetente" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NomeBanco" class="control-label"></label>
            <input asp-for="NomeBanco" class="form-control" />
            <span asp-validation-for="NomeBanco" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TipoComprovante" class="control-label"></label>
            <input asp-for="TipoComprovante" class="form-control" />
            <span asp-validation-for="TipoComprovante" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataCadastro" class="control-label"></label>
            <input asp-for="DataCadastro" type="datetime-local" class="form-control" />
            <span asp-validation-for="DataCadastro" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Mostrar a tela de carregamento quando o formulário for enviado
            $('form').on('submit', function () {
                $('#loadingOverlay').show();
            });
        });
    </script>
</body>
</html>
