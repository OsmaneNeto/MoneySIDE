<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoneySIDE</title>

    <!-- Estilos -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoneySIDE.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

    <!-- Caminho corrigido para os arquivos CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/eduardo/reset.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/eduardo/style.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/eduardo/banner.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/eduardo/header.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/eduardo/cards.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/eduardo/movimentacao.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/eduardo/pontuacao.css")">

    <!-- Incluindo o arquivo JavaScript com o caminho correto -->
    <script src="@Url.Content("~/scripts/script.js")"></script>

    <!-- Fontes externas -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

</head>
<body>

    <style>
        </style>
    <!-- Cabeçalho -->
    <header class="cabecalho" style=" background-color: #000000;">
        <div class="container">
            <!-- Logo -->
            <a href="/">
                <img style='float:left' class="container__logotipo" src="@Url.Content("~/assets/Logo_MoneySide.svg")" alt="Logotipo do GroovyLab">
            </a>

            <!-- Navegação -->
            <div class="navegacao__container" >
                <nav class="navegacao__links">
                    <ul class="lista__navegacao" >
                        <li class="lista-menu__item"><a class="nav-link" asp-area="" asp-controller="Leanding" asp-action="Index">Leanding</a></li>
                        <li class="lista-menu__item"><a class="nav-link" asp-area="" asp-controller="Scanner" asp-action="Index">Scanner</a></li>
                        <li class="lista-menu__item"><a class="nav-link" asp-area="" asp-controller="Registros" asp-action="Index">Registros</a></li>
                        <li class="lista-menu__item"><a class="nav-link" asp-area="" asp-controller="Analise" asp-action="Index">Analise</a></li>
                        <li>@await Html.PartialAsync("_LoginPartial") <!-- Inclui o login/cadastro --></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Espaço após o cabeçalho -->
    <div class="content-wrapper">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()  <!-- O conteúdo das páginas vai aqui -->
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
