@{
    ViewBag.Title = "Analisar Extrato Bancário";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/scanner.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <h2>@ViewBag.Title</h2>

        <form asp-action="Upload" asp-controller="Scanner" method="post" enctype="multipart/form-data">
            <div>
                <label for="file">Selecione o arquivo do extrato bancário:</label>
                <input type="file" name="file" id="file" />
            </div>
            <div>
                <button type="submit">Enviar</button>
            </div>
        </form>

        @if (ViewBag.Result != null)
        {
            <h3>Resultado da Análise:</h3>
            <pre>@ViewBag.Result</pre>
        }
    </div>
</body>
</html>
